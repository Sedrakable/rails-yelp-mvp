<p id="notice"><%= notice %></p>

<div class="container">
  <h1>Restaurants</h1>
  <table>

    <thead>
      <tr>
        <th class="bg-primary bg-opacity-10">Name</th>
        <th class="bg-primary bg-opacity-10">Address</th>
        <th class="bg-primary bg-opacity-10">Options</th>
        <th class="bg-primary bg-opacity-10" colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @restaurants.each do |restaurant| %>
        <tr>
          <td class="p-2 border-end"><%= restaurant.name %></td>
          <td class="p-2 border-end"><%= restaurant.category %></td>
          <td class="p-2"><%= link_to 'Show', restaurant %></td>
          <td class="p-2"><%= link_to 'Edit', edit_restaurant_path(restaurant) %></td>
          <!--td class="p-2"><%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' } %></td-->
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <%= link_to 'New Restaurant', new_restaurant_path %>
</div>
